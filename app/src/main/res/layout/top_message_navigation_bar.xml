<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topMessageBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/top_message_bar"
            style="@style/Widget.MaterialComponents.Toolbar.Surface" >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_avatar_contact"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                />
            <TextView
                android:id="@+id/tv_name_contact"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten User"
                android:textStyle="bold"
                android:textSize="20dp"
                />
            <ImageView
                android:id="@+id/dot_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/dot_online"/>
        </com.google.android.material.appbar.MaterialToolbar>


    </com.google.android.material.appbar.AppBarLayout>



</LinearLayout>