<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/white_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi lời chào tới "
        android:padding="12dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="@color/blue"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập nội dung"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/input_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_send_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:padding="12dp"
        android:hint="Xin chào tôi là ... "
        android:layout_margin="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_cancel"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18dp"
            android:background="@drawable/bg_gray_conner"
            android:padding="8dp"
            android:text="hủy"/>
        <Button
            android:id="@+id/btn_send"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:padding="8dp"
            android:background="@drawable/bg_blue_conner_full"
            android:textSize="18dp"
            android:text="Gửi"
            />
    </LinearLayout>

</LinearLayout>